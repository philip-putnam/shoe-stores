{% extends 'base.html.twig' %}

{% block content %}
    <h3>Add a shoe store:</h3>
    <form action='/add-store' method='post'>
        <label for='store_name'>Name: </label>
        <input type='text' name='store_name' required>

        <label for='store_address'>Address: </label>
        <input type='text' name='store_address' required>

        <label for='store_phone'>Phone number: </label>
        <input type='text' name='store_phone'>

        <button class='btn btn-primary' type='submit'>Add store</button>
    </form>
    {% if stores is not empty %}
        <p>Local shoe stores:</p>
            <ul>
                {% for store in stores %}
                    <div class='row'>
                        <div class='col-md-2'>
                            <li><a href='/store/{{ store.getId }}'>{{ store.getName }}</a></li>
                        </div>
                        <div class='col-md-2'>
                            <form action='/delete-store' method='post'>
                                <input type='hidden' name='_method' value='delete'>
                                <input type='hidden' name='store_id' value='{{ store.getId }}'>
                                <button type='submit'>delete</button>
                            </form>
                        </div>
                    </div>
                {% endfor %}
            </ul>
    {% endif %}
{% endblock %}
